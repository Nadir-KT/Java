package com.java.GUI.Swings;

import javax.swing.*;
import java.awt.event.*;
import java.net.UnknownHostException;

public class Components {

	public static void main(String[] args) {
		// JButton JTextField JTextArea
		JFrame f=new JFrame("JFrame");//Constructs a new frame that is initially invisible. 
		
		JButton b=new JButton("Click");//Creates a button with text.
		b.setBounds(120, 100, 120, 20);//setBounds(int x, int y, int width, int height)
		f.add(b);
		
		JTextField tf=new JTextField();//Constructs a new TextField.
		tf.setBounds(120, 180, 120, 20);
		f.add(tf);
		
		JLabel l=new JLabel();
		l.setBounds(120, 250, 120, 20);
		f.add(l);

		b.addActionListener(new ActionListener() {
			@Override
			public void actionPerformed(ActionEvent e) {
				//tf.setText("actionPerformed");
				String address=tf.getText();
				try {
					String ip=java.net.InetAddress.getByName(address).getHostAddress();
					l.setText(ip);
				} catch (UnknownHostException e1) {
					// TODO Auto-generated catch block
					e1.printStackTrace();
				}
			}
		});
		
		f.setSize(400, 400);
		f.setLayout(null);
		f.setVisible(true);
	}

}

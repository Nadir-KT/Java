package com.java.Exception;

public class ExceptionHandling {

	public static void main(String[] args) {
		// Exceptions - Runtime UnExpectated Errors
		int a=10;
		int c=0;
		
		try {
			c=a/0;//Statement
		} catch (Exception e) {
			c=0;//Solution: handle exception
		}
		System.out.println(c);
	}

}

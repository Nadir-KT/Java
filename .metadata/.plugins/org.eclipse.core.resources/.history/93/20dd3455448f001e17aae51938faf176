package com.java.GUI.AWT;

import java.awt.Button;
import java.awt.Frame;

public class awtBasic extends Frame{
//Frame object creation with Button, Position, View, Size, Title
	public awtBasic() {
		Button b1=new Button("Close");
		//setBounds(int x, int y, int width, int height)
		b1.setBounds(250, 250, 80, 30);//Boundary
		//public void add(Component arg)
		add(b1);
		//public void setSize(int width, int height)
		setSize(350, 300);
		setTitle("Embedded Application");
		//public void setLayout(LayoutManager e)
		setLayout(null);
		//public void setVisible(boolean status)
		setVisible(true);
	}
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		// Abstract Window Toolkit (AWT)
		// Platform(OS) Dependent
		// Packages: java.awt.*
		// Containers: Window, Panel, Frame, Dialog
		
		awtBasic b1=new awtBasic();
	}

}
